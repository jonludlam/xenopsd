(* -*- tuareg -*- *)
#require "unix"

let version =
  let ic = open_in "../VERSION" in
  let version = input_line ic in
  close_in ic;
  version

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(jbuild_version 1)

(rule (
  (targets (version.ml))
  (deps ())
  (action (
    with-stdout-to ${@} (echo "let version = \"%s\"\n")
  ))
))

(library (
  (name xenopsd)
  (public_name xapi-xenopsd)
  (wrapped false)
  (flags (:standard -warn-error +a-3))
  (libraries (
    c_stubs
    stdext
    threads
    threads.posix
    uuidm
    xmlm
    cohttp
    uri
    rpclib.core
    rpclib.dbgen
    forkexec
    fd-send-recv
    xcp
    xcp.xen
    xcp.storage
    xcp.updates
    sexplib
    ppx_sexp_conv.runtime-lib
    uutf
    ezxenstore
    xenstore
    xenstore.unix
    xenstore_transport
    xenstore_transport.unix
    core
    re
    re.pcre
  ))
  (preprocess (pps (ppx_deriving_rpc ppx_sexp_conv bisect_ppx -conditional)))
))
|} version
